{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "blockrift",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "media": {
    "dir": "assets"
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "blockrift",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Seed Daily Game Data",
        "description": "daily-game-example",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/provide-data"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  }
}
