{
  "name": "voxel",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev:client": "cd src/client && vite",
    "dev:server": "cd src/server && tsx index",
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build": "npm run build:client && npm run build:server",
    "preview": "vite preview --port 8080",
    "lint": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@types/express": "5.0.1",
    "@types/node": "^24.9.1",
    "@types/three": "^0.180.0",
    "@types/ws": "^8.18.1",
    "@vitest/ui": "^4.0.3",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "typescript": "5.8.2",
    "vite": "6.2.4",
    "vitest": "^4.0.3"
  },
  "dependencies": {
    "@devvit/web": "0.12.1",
    "devvit": "0.12.1",
    "express": "5.1.0",
    "redis": "^5.9.0",
    "three": "^0.180.0",
    "ws": "^8.18.3"
  }
}
